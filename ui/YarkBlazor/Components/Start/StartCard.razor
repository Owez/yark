<div class="start-card @((OnLeft ? "start-card-left" : ""))">
    <a href=@Link class="start-card-link">
        <img src=@IconKindMethods.GetUri(Orb) alt="Orb" class="orb">
        <h1 class="start-card-title">@Title</h1>
        <p class="start-card-description">@Description</p>
    </a>
    @ChildContent
</div>

<style scoped>
    .start-card {
        margin: 20px;
        box-sizing: border-box;
        padding: 20px;
        border-radius: 20px;
        border: 1px solid rgba(0, 0, 0, 0.12);
        width: calc(10vw + 12.5rem);
        min-width: 18rem;
        aspect-ratio: 3/4;
        max-height: 70vh;
    }

    .start-card-left {
        margin-right: 0;
    }

    .start-card-link {
        color: inherit;
        text-decoration: none;
    }

    .orb {
        width: 50px;
        height: 50px;
    }

    .start-card-title {
        font-size: 18pt;
        font-weight: 500;
        margin-top: 7.5px;
        margin-bottom: 1rem;
    }

    .start-card-description {
        font-size: 12pt;
        margin-bottom: 1.5rem;
    }
</style>

@code {
    [Parameter]
    public StartCardKind Kind { get; set; } = StartCardKind.Normal;

    [Parameter]
    public string Title { get; set; } = "Start Card";

    [Parameter]
    public string Description { get; set; } = "Description";

    [Parameter]
    public string Link { get; set; } = "/example";

    [Parameter]
    public IconKind Orb { get; set; } = IconKind.GreenOrb;

    [Parameter]
    public bool OnLeft { get; set; } = false;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}