    .start-card-header {}

    h1 {}

    .orb {}
</style>

@code {
    [Parameter]
    public StartCardKind Kind { get; set; } = StartCardKind.Normal;

    [Parameter]
    public string Title { get; set; } = "Start Card";

    [Parameter]
    public string Description { get; set; } = "Description";

    [Parameter]
    public IconKind Orb { get; set; } = IconKind.GreenOrb;
}