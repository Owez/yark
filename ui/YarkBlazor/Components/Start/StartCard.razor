<div class="start-card">
    <div class="start-card-header">
        <img src=@IconKindMethods.GetUri(Orb) alt="Orb" class="orb">
        <h1>@Title</h1>
    </div>
    <p>@Description</p>
    @Orb
</div>

<style scoped>
    .start-card {
        margin: 20px;
        box-sizing: border-box;
        padding: 17.5px;
        border-radius: 20px;
        border: 1px solid rgba(0, 0, 0, 0.12);
        width: 20vw;
        height: 40vh;
    }
</style>

@* TODO: copy old design *@
